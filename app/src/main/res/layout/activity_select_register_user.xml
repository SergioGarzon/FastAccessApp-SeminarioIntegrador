<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRegisterUser"
    android:background="@drawable/backgroundapp">

    <Button
        android:id="@+id/btnBackSelectOptionStart"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/border_buttons"
        android:onClick="changeBackStartActivity"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout8"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lblSelectOption"
        android:layout_width="308dp"
        android:layout_height="82dp"
        android:text="Select an option:"
        android:textAlignment="center"
        android:textColor="#F6F6F6"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout8"
        android:layout_width="340dp"
        android:layout_height="195dp"
        android:layout_marginBottom="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSelectOption"
        app:layout_constraintVertical_bias="0.564">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/repararcuenta" />

            <Button
                android:id="@+id/btnResetAccount"
                android:layout_width="281dp"
                android:layout_height="60dp"
                android:background="@drawable/border_buttons"
                android:text="Account recovery"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/addaccount" />

            <Button
                android:id="@+id/btnCreateNewAccount"
                android:layout_width="281dp"
                android:layout_height="60dp"
                android:background="@drawable/border_buttons"
                android:text="CREATE NEW ACCOUNT"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="123dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/startlogotype" />

</androidx.constraintlayout.widget.ConstraintLayout>