<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MailOrWhatsapp"
    android:background="@drawable/backgroundimage">

    <TextView
        android:id="@+id/txtSendQR"
        android:layout_width="292dp"
        android:layout_height="155dp"
        android:text="SENDING QR CODE"
        android:textAlignment="center"
        android:textColor="#F6F6F6"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:background="@drawable/border_buttons"
        android:text="FINISH"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnWhatsapp"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:text="Email address:"
        android:textAlignment="viewStart"
        android:textColor="#F6F6F6"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSendQR"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:text="Whatsapp number:"
        android:textAlignment="viewStart"
        android:textColor="#F6F6F6"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutEmailAddress"
        app:layout_constraintVertical_bias="0.021" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayoutEmailAddress"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:background="@drawable/border_button_white"
        android:maxLines="1"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email address" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayoutPhoneNumberWhatsapp"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_button_white"
        android:maxLines="1"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter whatsapp number" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imgBtnWhatsapp"
        android:layout_width="94dp"
        android:layout_height="80dp"
        android:background="@drawable/border_button_image"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutPhoneNumberWhatsapp"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/whatsappweb" />

    <ImageButton
        android:id="@+id/imgBtnEmail"
        android:layout_width="94dp"
        android:layout_height="80dp"
        android:background="@drawable/border_button_blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toEndOf="@+id/imgBtnWhatsapp"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutPhoneNumberWhatsapp"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/emailbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>