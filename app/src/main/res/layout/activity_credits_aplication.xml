<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical"
    tools:context=".CreditsAplication">

    <Button
        android:id="@+id/btnCreditsOk"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:onClick="changeActivity"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:background="@drawable/border_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="287dp"
        android:layout_height="38dp"
        android:foregroundTint="#00DB8C"
        android:text="FAST ACCESS APP"
        android:textColor="#00E87E"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586"
        app:srcCompat="@drawable/fastaccessapp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="337dp"
        android:layout_height="373dp"
        android:layout_marginTop="20dp"
        android:text="Fast Access App is a project development by UTN FRC Student: \n\n - Facundo Rago \n\n - Genaro Paredes \n\n - Matias Farach \n\n - Sergio Garzón"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreditsOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.388" />

    <ImageButton
        android:id="@+id/imgBtnLinkedinSergio"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:tooltipText="View Sergio Garzón's linkedin profiler"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/linkedin" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:tooltipText="View Matias Farach's linkedin profiler"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/linkedin" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:tooltipText="View Genaro Paredes's linkedin profiler"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnLinkedinFacundo"
        app:srcCompat="@drawable/linkedin" />

    <ImageButton
        android:id="@+id/imgBtnLinkedinFacundo"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:tooltipText="View Facundo Rago's linkedin profiler"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:srcCompat="@drawable/linkedin" />


</androidx.constraintlayout.widget.ConstraintLayout>